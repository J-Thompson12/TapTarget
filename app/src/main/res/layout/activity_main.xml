<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.justin.thompson.taptarget.MainActivity"
                                             android:background="@drawable/back_day"
                                             android:id="@+id/relativeLayout">

    <Button
            android:text="Play"
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:id="@+id/playButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" style="@style/Base.Widget.AppCompat.ImageButton"
            android:shadowDx="-5"
            android:shadowDy="5"
            android:shadowRadius="0.5"
            android:shadowColor="@color/colorAccent"
            android:background="@drawable/target_main" android:textSize="40sp" android:textColor="@color/colorPrimary"
            app:layout_constraintVertical_bias="0.776"/>
    <Button
            android:text="Kids"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/kidsPlayButton"
            style="@style/Base.Widget.AppCompat.ImageButton"
            android:shadowDx="-5"
            android:shadowDy="5"
            android:shadowRadius="0.5"
            android:shadowColor="@color/colorAccent"
            android:background="@drawable/target_main" android:textSize="24sp" android:textColor="@color/colorPrimary"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Score"
            android:layout_width="181dp"
            android:layout_height="54dp"
            android:id="@+id/textView"
            android:textSize="30sp"
            android:layout_marginBottom="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorPrimary" android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.501"
            android:textAlignment="center"
            android:shadowColor="@color/colorAccent"
            android:shadowDx="-5"
            android:shadowDy="5"
            android:shadowRadius="0.5" app:layout_constraintBottom_toTopOf="@+id/playButton"/>
    <TextView
            android:text="Tap Target"
            android:layout_width="276dp"
            android:layout_height="76dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/playButton" android:textAlignment="center"
            android:textSize="50sp" android:textColor="@color/colorPrimary" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            android:shadowDx="-5"
            android:shadowDy="5"
            android:shadowRadius="0.5"
            android:shadowColor="@color/colorAccent" app:layout_constraintVertical_bias="0.335"/>
    <TextView
            android:text=" High Score"
            android:layout_width="138dp"
            android:layout_height="33dp"
            android:shadowDx="-5"
            android:shadowDy="5"
            android:shadowRadius="0.5"
            android:shadowColor="@color/colorAccent"
            android:id="@+id/textView3" android:textSize="24sp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"/>
    <TextView
            android:text="0"
            android:layout_width="138dp"
            android:layout_height="47dp"
            android:shadowDx="-5"
            android:shadowDy="5"
            android:shadowRadius="0.5"
            android:shadowColor="@color/colorAccent"
            android:id="@+id/highScoreTxt" android:textSize="30sp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
</android.support.constraint.ConstraintLayout>